<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbars"
    android:background="@color/gray_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll|enterAlways|snap"
    >
    <Button
        android:id="@+id/btnTextViewForTab"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:text="1"
        android:textSize="10dp"
        android:background="@drawable/tabbuttonbackground">
    </Button>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="10">



        <ImageButton
            android:id="@+id/btnmic"
            android:layout_width="30dp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:background="@drawable/micbuttonbackground"
            android:src="@drawable/ic_mic_none_black_24dp">

        </ImageButton>

        <EditText
            android:id="@+id/edittexturl"
            android:layout_width="154dp"
            android:layout_height="35dp"
            android:layout_weight="7.8"
            android:background="@android:color/transparent"
            android:hint="Enter Url or Search"
            android:imeOptions="actionGo"
            android:inputType="textAutoComplete"
            android:maxLines="1"
            android:textColor="@color/black">

        </EditText>

        <ImageButton
            android:id="@+id/btnrefresh"
            android:layout_width="23dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="0.6"
            android:background="@drawable/hover_selector_two"
            android:pointerIcon="hand" />

        <View
            android:layout_width="1.5dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:background="@color/gray_light2">

        </View>

        <ImageButton
            android:id="@+id/searchbtn"
            android:layout_width="44dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginRight="6dp"
            android:layout_weight="0.8"
            android:background="@drawable/micbuttonbackground"
            android:src="@drawable/ic_search_black_24dp" />


        <ImageButton
            android:id="@+id/btnAddToBookmarks"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_bookmark_border_24">

        </ImageButton>
    </LinearLayout>







</androidx.appcompat.widget.Toolbar>